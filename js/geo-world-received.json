---
title: grouped cards data
---
{% assign records = site.data.received %}
{% assign grouped_by_country = records | group_by: "country" %}
[
{% for group in grouped_by_country %}
  {% assign total_days = 0 %}
  {% assign count = 0 %}
  {% for item in group.items %}
    {% if item.sent_date and item.received_date and item.received_date != "" %}
      {% assign sent = item.sent_date | date: "%s" %}
      {% assign received = item.received_date | date: "%s" %}
      {% assign days = received | minus: sent | divided_by: 86400 %}
      {% assign total_days = total_days | plus: days %}
      {% assign count = count | plus: 1 %}
    {% endif %}
  {% endfor %}
  {% if count > 0 %}
    {% assign avg_days = total_days | divided_by: count %}
  {% else %}
    {% assign avg_days = 0 %}
  {% endif %}
  {% if group.name == "China" %}
    {% continue %}
  {% endif %}
  { "country": "{{ group.name }}", "count": {{ group.items | size }}, "avgDeliveryDays": {{ avg_days }} }{% if forloop.last == false %},{% endif %}
{% endfor %}
]
